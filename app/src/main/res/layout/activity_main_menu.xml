<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".mainActivities.MainMenu">

    <TextView
        android:id="@+id/tvModes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2_extrabold"
        android:text="Modes"
        android:textColor="@color/orange"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_main_menu"
        app:layout_constraintBottom_toTopOf="@id/guideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/who_is_faster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Who is faster"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/guideline15"
        app:layout_constraintBottom_toTopOf="@id/guideline24"
        android:background="@drawable/mode_buttons"
        style="@style/mode_button"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/who_is_more_expensive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Who is more expensive"
        style="@style/mode_button"
        android:background="@drawable/mode_buttons"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/who_is_faster"
        app:layout_constraintBottom_toTopOf="@id/guess_the_price"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guess_the_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guess the price"
        style="@style/mode_button"
        android:background="@drawable/mode_buttons"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/who_is_more_expensive"
        app:layout_constraintBottom_toTopOf="@id/guess_the_player"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guess_the_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guess the player"
        style="@style/mode_button"
        android:background="@drawable/mode_buttons"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/guess_the_price"
        app:layout_constraintBottom_toTopOf="@id/who_has_scored_more"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/who_has_scored_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Who has scored more"
        style="@style/mode_button"
        android:background="@drawable/mode_buttons"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/guess_the_player"
        app:layout_constraintBottom_toTopOf="@id/who_has_assisted_more"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/who_has_assisted_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Who has assisted more"
        style="@style/mode_button"
        android:background="@drawable/mode_buttons"
        app:layout_constraintEnd_toEndOf="@id/guideline95_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline5_vertical"
        app:layout_constraintTop_toBottomOf="@id/who_has_scored_more"
        app:layout_constraintBottom_toTopOf="@id/guideline78"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline24"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline95_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/top_bar_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:name="com.example.footballquiz.LevelFragment"
        />




</androidx.constraintlayout.widget.ConstraintLayout>